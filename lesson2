// Создай функцию canBuyBeer, которая принимает в качестве параметра целое число age:
//     если age больше или равно 18, то функция вернет строку You can buy beer;
//     в противном случае функция вернет строку You can not buy beer.
// вернуть нужную строку через alert

function canBuyBeer(age) {
	// let age = 14;
	if (age >= 18) { 
		console.log('You can buy beer');	
	} else  {
		console.log('You can not buy beer.');	
	}
	
}
canBuyBeer(14);


