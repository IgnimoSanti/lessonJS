// ................................................................................................................
// создать функцию которая задас вопрос пользователю, и на основании ответа выдаст следущую инфо на страницу
// функция задает вопрос пользователю о числе, и проверяет счастливое ли оно
// если ответ 7 - вывести на страницу "lucky number!"
// если 777 - вывести 'fortune number!'
// c остальными числами вывести "you`re not lucky man :("
// !!! если передано строку, вывести ошибку и запросить новое число
// !!! для сравнения чисел их нужно преобразовать в число
let message = prompt('напишите число и узнайте счастливое ли оно.');
function luckyNumber(message) {
	return (message === '7') ? 'lucky number!' :
	(message === '777') ? 'fortune number!' :
	(message === '') ? 'введите новое число.' :
	"you`re not lucky man :(";

}
alert(luckyNumber(message));
